<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yukun.textapplication.MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/textureView"
            android:onClick="TextureView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextureView" />
        <Button
            android:id="@+id/observer"
            android:onClick="Observer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observer" />
        <Button
            android:id="@+id/DragListview"
            android:onClick="DragListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DragListview" />
        <Button
            android:text="Chat"
            android:onClick="Chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="CardView"
            android:onClick="CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="LoginView"
            android:onClick="LoginView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="RoateView"
            android:onClick="RoateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="AddList"
            android:onClick="AddList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="Litepal"
            android:onClick="Litepal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="CircleView"
            android:onClick="CircleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

</LinearLayout>
