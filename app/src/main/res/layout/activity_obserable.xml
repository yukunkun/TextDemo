<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context="com.yukun.textapplication.ObserableActivity">
    <com.yukun.textapplication.views.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Welcome"
            style="@style/text_flag_01"/>
        <TextView
            android:text="JsvaScripe"
            style="@style/text_flag_01"/>
        <TextView
            android:text="HTML5"
            style="@style/text_flag_01"/>
        <TextView
            android:text="Welcome"
            style="@style/text_flag_01"/>
        <TextView
            android:text="JAVA"
            android:padding="2dp"
            style="@style/text_flag_01"/>
        <TextView
            android:text="Welcomewelcome"
            style="@style/text_flag_01"/>
        <TextView
            android:text="工程师"
            style="@style/text_flag_01"/>
    </com.yukun.textapplication.views.FlowLayout>
<!--    <com.mcxtzhang.pathanimlib.PathAnimView
        android:id="@+id/storeView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#b7f7d4"
        android:padding="5dp"/>

    <com.mcxtzhang.pathanimlib.StoreHouseAnimView
        android:id="@+id/pathAnimView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@android:color/black"
        android:padding="5dp"/>-->
    <com.yukun.textapplication.views.GiftFrameLayout
        android:id="@+id/gift_layout1"
        android:layout_width="250dp"
        android:layout_height="80dp"/>
    <com.yukun.textapplication.views.GiftFrameLayout
        android:id="@+id/gift_layout2"
        android:layout_width="250dp"
        android:layout_height="80dp"/>
    <Button
        android:id="@+id/but"
        android:onClick="startAnim"
        android:text="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.yukun.textapplication.views.BMoveView
            android:id="@+id/bmoveview"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <RadioGroup
            android:id="@+id/rg_group"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RadioButton
                android:id="@+id/rb_first"
                android:button="@null"
                android:text="索引"
                android:layout_weight="1"
                android:textColor="@drawable/rb_button"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/rb_second"
                android:button="@null"
                android:text="索引"
                android:layout_weight="1"
                android:textColor="@drawable/rb_button"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/rb_third"
                android:button="@null"
                android:text="索引"
                android:layout_weight="1"
                android:textColor="@drawable/rb_button"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </RadioGroup>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>
