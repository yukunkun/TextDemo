<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yukun.textapplication.livephonelogin.LivePhoneActivity">

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/sendNum"
        android:text="send"
        android:layout_toRightOf="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <EditText
        android:layout_below="@id/phoneNumber"

        android:id="@+id/getnum"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_toRightOf="@id/getnum"
        android:id="@+id/login"
        android:text="login"
        android:layout_below="@id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/getgetuserinfo"
        android:layout_below="@id/login"
        android:text="userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
